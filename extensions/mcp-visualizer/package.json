{
  "name": "mcp-visualizer",
  "displayName": "可视化助手",
  "description": "提供 Mastra MCP 功能文档查看与 Git 分支流程可视化操作的 VS Code 扩展。",
  "version": "0.0.1",
  "publisher": "mastra-labs",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mcpVisualizer.view"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-visualizer-container",
          "title": "MCP 可视化",
          "icon": "assets/activitybar.svg"
        }
      ]
    },
    "views": {
      "mcp-visualizer-container": [
        {
          "id": "mcpVisualizer.view",
          "name": "MCP 可视化",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mcpVisualizer.refresh",
        "title": "刷新 MCP 可视化"
      }
    ],
    "configuration": {
      "title": "MCP Visualizer",
      "properties": {
        "mcpVisualizer.docSearchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "docs",
            "extensions",
            "prompts",
            "packages",
            "apps",
            "services",
            "mcp",
            "src"
          ],
          "markdownDescription": "用于扫描 MCP README 的相对目录列表，默认覆盖 docs/extensions/prompts/packages/apps/services/mcp/src。"
        },
        "mcpVisualizer.authorizations": {
          "type": "object",
          "default": {},
          "markdownDescription": "平台鉴权状态开关，键为平台标识（如 lark、google、figma），值为布尔值。"
        },
        "mcpVisualizer.instructions.projectStandardId": {
          "type": "string",
          "default": "vue2_not_ts",
          "markdownDescription": "默认注入的项目代码规范模板 ID，可结合 projectStandardMap 自定义映射。"
        },
        "mcpVisualizer.instructions.projectStandardMap": {
          "type": "object",
          "default": {},
          "markdownDescription": "项目代码规范模板映射，键为项目 ID，值可指定 templatePath/content/targetFileName/displayName。"
        },
        "mcpVisualizer.instructions.context7Prompts": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": [],
          "markdownDescription": "扩展的 context7 prompt 列表，支持通过 packageName/versionPattern/templatePath/content 定制。"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:webview": "npm run watch --prefix webview-ui",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "watch:dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\""
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "marked": "^9.1.6",
    "simple-git": "^3.30.0"
  }
}
